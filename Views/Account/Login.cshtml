@{
}

@model Reporteadores.Models.Usuario

@{
    ViewData["Title"] = "Index";
}

<div class="center-content">
    <div class="title-content">
        <h2><strong>INICIAR SESIÓN</strong></h2>
    </div>
    <div class="container2">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div>
                <label for="UsCorto">Nombre de usuario:</label>
                @Html.TextBoxFor(m => m.UsCorto)
            </div>

            <div>
                <label for="UsPasswrd">Contraseña:</label>
                @Html.PasswordFor(m => m.UsPasswrd)
            </div>
            
            <input id="Entrar" type="submit" value="Entrar" />
            
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
            {
                <div class="error-message">
                    @ViewBag.ErrorMessage
                </div>
            }
        }
    </div>
</div>