@model Reporteadores.Models.Usuario

@{
    ViewData["Title"] = "Index";
}

<section class="flex min-h-screen items-center justify-center px-4">
    <div class="w-full max-w-md rounded-2xl border-1 border-white bg-gray-500 p-8 shadow-2xl">
        <h1 class="mb-6 text-center text-4xl font-extrabold text-white tracking-wide">
            INICIAR SESIÓN
        </h1>

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "", new { @class = "text-red-400 mb-4 text-center text-sm" })

            <!-- Campo usuario -->
            <div class="flex flex-col mb-4">
                <label class="py-1 text-white font-semibold" for="UsCorto">Nombre de usuario:</label>
                @Html.TextBoxFor(m => m.UsCorto, new {
                    @class = "rounded-md border border-gray-400 bg-gray-100 px-3 py-2 text-gray-800 focus:border-blue-500 focus:ring-2 focus:ring-blue-400",
                    placeholder = "Ingresa tu usuario"
                })
            </div>

            <!-- Campo contraseña -->
            <div class="flex flex-col mb-4">
                <label class="py-1 text-white font-semibold" for="UsPasswrd">Contraseña:</label>
                @Html.PasswordFor(m => m.UsPasswrd, new {
                    @class = "rounded-md border border-gray-400 bg-gray-100 px-3 py-2 text-gray-800 focus:border-blue-500 focus:ring-2 focus:ring-blue-400",
                    placeholder = "••••••••"
                })
            </div>

            <!-- Botón de enviar -->
            <div class="pt-4 text-center">
                <input id="Entrar"
                       type="submit"
                       value="Entrar"
                       class="rounded-lg border-2 border-green-600 bg-green-700 px-8 py-2 font-semibold text-white shadow-lg transition-all duration-200 hover:scale-105 hover:bg-blue-600 hover:border-blue-600" />
            </div>

            <!-- Mensaje de error -->
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
            {
                <div class="mt-4 text-center text-sm font-medium text-red-400">
                    @ViewBag.ErrorMessage
                </div>
            }
        }
    </div>
</section>