@{
}

@model Reporteadores.Models.Usuario

@{
    ViewData["Title"] = "Index";
}

<section class="flex min-h-screen items-center justify-center">
    
    <div class="border-2 items-center justify-center rounded-lg bg-gray-500 p-10 text-xl font-medium shadow-xl">
        <h1 class="text-center text-4xl text-white">
            <strong>INICIAR SESIÓN</strong>
        </h1>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div class="flex flex-col">
                <label class="py-2 text-white" for="UsCorto">Nombre de usuario:</label>
                @Html.TextBoxFor(m => m.UsCorto)
            </div>

            <div class="flex flex-col">
                <label class="py-2 text-white" for="UsPasswrd">Contraseña:</label>
                @Html.PasswordFor(m => m.UsPasswrd)
            </div>

            <div class="py-6 text-center">
                <input class="border-2 rounded-lg bg-green-700 px-5 py-2 font-medium text-white shadow-xl hover:bg-blue-500" id="Entrar" type="submit" value="Entrar" />
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
            {
                <div class="error-message">
                    @ViewBag.ErrorMessage
                </div>
            }
        }
    </div>
</section>