@{  
   ViewData["Title"] = "Reporte";  
   var listReporte = ViewBag.Reporte as List<Reporte>;  
   var peAnio = ViewBag.PeAnio as List<int> ?? new List<int>();
}  

<div class="mt-20 flex justify-center">
    <div class="border-2 flex flex-col items-center rounded-xl bg-gray-500 p-6 text-white shadow-lg w-full max-w-5xl">

        <!-- Título -->
        <h1 class="text-center text-2xl lg:text-3xl font-bold mb-6">
            Selecciona tus opciones
        </h1>

        <!-- Filtros -->
        <div class="flex flex-col lg:flex-row gap-4 mb-6">
            <section class="flex flex-col items-start">
                <h3 class="mb-1 text-sm font-medium">Año</h3>
                <select 
                    id="peAnio" 
                    class="w-40 rounded-lg border border-blue-500 p-2 text-black focus:ring-2 focus:ring-blue-400">
                    <option value="">AÑO</option>
                    @foreach (var anio in ViewBag.PeAnio)
                    {
                        <option value="@anio">@anio</option>
                    }
                </select>
            </section>

            <section class="flex flex-col items-start">
                <h3 class="mb-1 text-sm font-medium">Tipo</h3>
                <select 
                    id="peTipo" 
                    class="w-40 rounded-lg border border-blue-500 p-2 text-black focus:ring-2 focus:ring-blue-400" 
                    disabled>
                    <option value="">TIPO</option>
                </select>
            </section>

            <section class="flex flex-col items-start">
                <h3 class="mb-1 text-sm font-medium">Número</h3>
                <select 
                    id="teNumeroPeriodo" 
                    class="w-40 rounded-lg border border-blue-500 p-2 text-black focus:ring-2 focus:ring-blue-400" 
                    disabled>
                    <option value="">NUMERO</option>
                </select>
            </section>
        </div>

        <!-- Tabla -->
        <div class="w-full p-1 overflow-x-auto rounded-lg border border-white bg-gray-600">
            <table id="rowSelect" class="w-full m-1 text-sm text-left text-black bg-gray-100 rounded-lg overflow-hidden">
                <thead class="bg-gray-200">
                    <tr>
                        <th class="border-b px-4 py-2 font-semibold text-gray-800">Código</th>
                        <th class="border-b px-4 py-2 font-semibold text-gray-800">Nombre</th>
                        <th class="border-b px-4 py-2 font-semibold text-gray-800 text-center">Ver</th>
                        <th class="border-b px-4 py-2 font-semibold text-gray-800 text-center">Descargar</th>
                    </tr>
                </thead>
                <tbody>
                    @if (listReporte != null)
                    {
                        foreach (var reports in listReporte)
                        {
                            <tr class="hover:bg-gray-300 transition">
                                <td class="border-b px-4 py-2">@Html.DisplayFor(m => reports.ReCodigo)</td>
                                <td class="border-b px-4 py-2">@Html.DisplayFor(m => reports.ReNombre)</td>
                                <td class="border-b px-4 py-2 text-center">
                                    <button class="select-row rounded bg-blue-500 p-2 hover:bg-blue-600 transition">
                                        <img src="~/images/ver-icon.webp" alt="Ver" class="h-5 w-5" />
                                    </button>
                                </td>
                                <td class="border-b px-4 py-2 text-center space-x-2">
                                    <button class="download-row rounded bg-red-500 p-2 hover:bg-red-600 transition">
                                        <img src="~/images/pdf-icon.webp" alt="PDF" class="h-5 w-5" />
                                    </button>
                                    <button class="excel-row rounded bg-green-500 p-2 hover:bg-green-600 transition">
                                        <img src="~/images/excel-icon.webp" alt="Excel" class="h-5 w-5" />
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>