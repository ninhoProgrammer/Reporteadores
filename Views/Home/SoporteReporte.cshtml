@{
    ViewData["Title"] = "Soporte Tecnico";
}

<section class="flex min-h-screen items-center justify-center text-white">
    <div class="w-full max-w-2xl rounded-2xl border-2 border-gray-400 bg-gray-500 p-8 shadow-2xl mt-10">

        <!-- Título -->
        <h1 class="mb-6 text-center text-3xl font-extrabold tracking-wide">
            Formulario de Soporte Técnico
        </h1>

        <!-- Formulario -->
        <form action="/Home/SoportReportSend" method="post" class="space-y-4">

            <!-- Nombre -->
            <div class="flex flex-col">
                <label class="mb-1 font-semibold">Nombre:</label>
                @if (ViewData["UserActive"] != null)
                {
                    <input class="rounded-md border border-gray-400 bg-gray-200 px-3 py-2 text-gray-700"
                           name="name" 
                           value="@ViewData["UserActive"]" 
                           readonly>
                }
                else
                {
                    <input class="rounded-md border border-gray-400 px-3 py-2 text-gray-700 focus:border-blue-500 focus:ring-2 focus:ring-blue-400"
                           name="name" 
                           required>
                }
            </div>

            <!-- Correo -->
            <div class="flex flex-col">
                <label class="mb-1 font-semibold">Correo Electrónico:</label>
                <input class="rounded-md border border-gray-400 px-3 py-2 text-gray-700 focus:border-blue-500 focus:ring-2 focus:ring-blue-400"
                       type="email" 
                       name="email" 
                       required>
            </div>

            <!-- Teléfono -->
            <div class="flex flex-col">
                <label class="mb-1 font-semibold">Teléfono:</label>
                <input class="rounded-md border border-gray-400 px-3 py-2 text-gray-700 focus:border-blue-500 focus:ring-2 focus:ring-blue-400"
                       name="phone" 
                       type="tel" 
                       pattern="[0-9\s+()-]*">
            </div>

            <!-- Descripción -->
            <div class="flex flex-col">
                <label class="mb-1 font-semibold">Descripción del Problema:</label>
                <textarea class="rounded-md border border-gray-400 px-3 py-2 text-gray-700 focus:border-blue-500 focus:ring-2 focus:ring-blue-400"
                          name="problem" 
                          rows="5" 
                          required>
                </textarea>
            </div>

            <!-- Botón -->
            <div class="pt-2 text-center">
                <input type="submit"
                       value="Enviar"
                       class="rounded-lg border-2 border-green-600 bg-green-700 px-8 py-3 font-semibold text-white shadow-lg transition-all duration-200 hover:scale-105 hover:bg-blue-600 hover:border-blue-600">
            </div>

        </form>
    </div>
</section>
