@{
    ViewData["Title"] = "Soporte Tecnico";
}

<section class="flex min-h-screen items-center justify-center text-white">
    <div class="border-2 items-center justify-center space-y-3 rounded-lg bg-gray-500 p-10 text-xl font-medium shadow-xl">
        <h1 class="text-center text-3xl"><strong>Formulario de Soporte Técnico</strong></h1>
    
        <form  action="/Home/SoportReportSend" method="post">
            
            <div class="flex flex-col space-y-2">
                <h3 class="text-star">Nombre:</h3>
                @if (@ViewData["UserActive"] != null)
                {
                    <input class="px-1 text-black" name="name" value="@ViewData["UserActive"]" readonly>
                }
                else
                {
                    <input class="px-1 text-black" name="name" required>
                }
                <h3>Correo Electrónico:</h3>
                <input class="px-1 text-black" name="email" required>
                <h3>Telepono</h3>
                <input class="px-1 text-black" name="phone">
                <h3>Descripción del Problema:</h3>
                <textarea class="px-1 text-black" type="problem" rows="5" name="problem" required></textarea>
            </div>
            <div class="py-4 text-center">
                <input class="border-2 rounded-lg bg-green-700 px-5 py-2 font-medium text-white shadow-xl hover:bg-blue-500" id="Entrar" type="submit" value="Enviar" />
            </div>
        
        </form>
    </div>
</section>
