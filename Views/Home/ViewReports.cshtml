@{
    ViewData["Title"] = "Descargar Reporte";
    var publicPath = ViewData["PublicPath"];
    Console.WriteLine($"Ruta p�blica in VR: {publicPath}");
}

<div class="mt-20 flex justify-center">
    <div class="container flex max-w-5xl flex-col items-center rounded-2xl border-2 border-gray-400 bg-gray-500 p-6 text-white shadow-2xl">

        <!-- Título -->
        <h1 class="py-3 text-center text-3xl font-bold tracking-wide">
            Visualizar PDF
        </h1>

        @if (publicPath == null)
        {
            <p class="mt-4 rounded-lg bg-gray-800 px-6 py-3 text-center text-lg text-gray-300 shadow-md">
                No hay un reporte disponible para mostrar.
            </p>
        }
        else
        {
            <div class="mt-6 w-full overflow-hidden rounded-lg border-2 border-gray-300 shadow-lg">
                <iframe src="@publicPath"
                        width="100%"
                        height="700px"
                        class="rounded-lg bg-white"
                        frameborder="0">
                </iframe>
            </div>
        }

    </div>
</div>


    
